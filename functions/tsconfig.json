{
  "compilerOptions": {
    "target": "ES2015",              // allow private identifiers
    "module": "commonjs",            // required for Cloud Functions
    "lib": ["es2015"],               // match the target
    "rootDir": "src",                // only compile under functions/src
    "outDir": "lib",                 // emit into functions/lib
    "skipLibCheck": true,            // ignore type errors in node_modules
    "esModuleInterop": true,         // common interop
    "strict": false                  // loosen checks so it compiles
  },
  "include": ["src"]                 // only your src folder
}